<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_dialog_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/alertdialog_bg">

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/setting_title"
            android:textColor="@color/setting_text"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dialog_title"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/dialog_wifi"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/dialog_wifi" />

            <ImageButton
                android:id="@+id/dialog_network"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/network" />

            <ImageButton
                android:id="@+id/homesetting"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/homesettings" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearLayout1"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <!--android:layout_alignParentBottom="true"-->
            <ImageButton
                android:id="@+id/dialog_light"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/lightsetting" />

            <ImageButton
                android:id="@+id/dialog_sound"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/sound" />

            <ImageButton
                android:id="@+id/dialog_more"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/more" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
